"""{{ bot_name }} â€” CLI bot entry point."""

import click
from bot.handler import handle_input
from bot.logger_setup import setup_logger
from config import LOG_LEVEL

logger = setup_logger(level=LOG_LEVEL)


@click.command()
@click.option("--verbose", is_flag=True, help="Enable debug logging")
def main(verbose: bool) -> None:
    """{{ description }}"""
    if verbose:
        import logging
        logging.getLogger("{{ bot_name }}").setLevel(logging.DEBUG)

    logger.info("Starting {{ bot_name }} (CLI mode)...")
    print("{{ bot_name }} is ready. Type your message (Ctrl+C to exit):")

    try:
        while True:
            user_input = input("> ")
            response = handle_input(user_input)
            print(response)
    except (KeyboardInterrupt, EOFError):
        print("\nGoodbye!")


if __name__ == "__main__":
    main()
